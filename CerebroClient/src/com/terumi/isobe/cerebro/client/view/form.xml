<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="com.terumi.isobe.cerebro.client.controller.ClientController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Cerebro" GridPane.columnIndex="0" 
           GridPane.rowIndex="0" GridPane.columnSpan="2" 
           GridPane.rowSpan="1" GridPane.halignment="LEFT" >
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <!-- Add Name Label -->
    <Label text="Name : " GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="LEFT"></Label>
    <!-- Add Name Field -->
    <TextField fx:id="nameField" prefHeight="30" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="LEFT"/>

    <!-- Add Signal Label -->
    <Label text="Signal : " GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="LEFT"></Label>
    <!-- Add Signal Field -->
    <TextField fx:id="signalField" prefHeight="30" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="LEFT"/>

    <!-- Add Reconstruct Button -->
    <Button fx:id="reconstructButton" text="Reconstruct"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            onAction="#handleReconstructButtonAction">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
    
    <!-- Add Images Button -->
    <Button fx:id="imagesButton" text="Get Images"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            onAction="#handleImagesButtonAction">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
</GridPane>
